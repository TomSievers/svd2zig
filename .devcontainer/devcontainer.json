{
	"name": "Ziglang devcontainer",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"ZIG_VERSION": "0.14.0",
			"MINISIGN_VERSION": "0.12"
		}
	},
	"runArgs": [
		"--userns=keep-id"
	],
	"capAdd": [
		"SYS_PTRACE"
	],
	"securityOpt": [
		"seccomp=unconfined"
	],
	"features": {},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker",
				"ziglang.vscode-zig",
				"ianic.zig-language-extras",
				"lorenzopirro.zig-snippets",
				"vadimcn.vscode-lldb"
			]
		}
	},
	"remoteUser": "vscode",
	"mounts": [
		{
			"source": "${localWorkspaceFolderBasename}-zig_cache",
			"target": "/workspaces/zig2svd/.zig-cache",
			"type": "volume"
		},
		{
			"source": "${localWorkspaceFolderBasename}-zig_out",
			"target": "/workspaces/zig2svd/zig-out",
			"type": "volume"
		}
	]
}
